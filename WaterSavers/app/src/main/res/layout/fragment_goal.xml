            android:layout_marginTop="112dp">
            <ImageView
                style="@style/coupons"
                android:id="@+id/coupon_onee"
                android:layout_marginRight="12dp"
                android:src="@drawable/apple"
                />
            <ImageView
                style="@style/coupons"
                android:id="@+id/coupon_two"
                android:layout_marginRight="12dp"
                android:src="@drawable/hp"
                />
            <ImageView
                style="@style/coupons"
                android:id="@+id/coupon_three"
                android:layout_marginRight="12dp"
